{% if has_access_to(route) %}
    {% set currentRoute = app.request.attributes.get('_route') %}
    {% if not activeRoutes is defined %}
        {% set activeRoutes = [] %}
    {% endif %}

    <li class="c-sidebar-nav-item">
        <a class="c-sidebar-nav-link{% if route == currentRoute or currentRoute in activeRoutes %} active{% endif %}" href="{{ path(route) }}">
            <i class="fa fa-{{ icon }} c-sidebar-nav-icon"></i> {{ name }}
        </a>
    </li>
{% endif %}
